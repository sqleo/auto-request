{
  "swagger": "2.0",
  "info": {
    "title": "企业通",
    "version": "last",
    "description": "企业通"
  },
  "basePath": "/",
  "tags": [
    {
      "name": "内容创新",
      "description": "营销内容创新大赛"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/api/verifications": {
      "get": {
        "tags": [
          "内容创新"
        ],
        "summary": "发送短信验证码",
        "description": "",
        "parameters": [
          {
            "name": "mobile",
            "in": "query",
            "required": true,
            "description": "手机号码",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {}
          }
        }
      }
    },
    "/api/contestant": {
      "post": {
        "tags": [
          "内容创新"
        ],
        "summary": "报名参赛",
        "description": "",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "root",
            "in": "body",
            "schema": {
              "type": "object",
              "title": "empty object",
              "properties": {
                "code": {
                  "type": "string",
                  "description": "工号（没有可为空）"
                },
                "name": {
                  "type": "string",
                  "description": "名字"
                },
                "mobile": {
                  "type": "string",
                  "description": "手机号"
                },
                "business_unit": {
                  "type": "string",
                  "description": "事业部"
                },
                "tiktok_id": {
                  "type": "string",
                  "description": "抖音号"
                },
                "red_booklet_id": {
                  "type": "string",
                  "description": "小红书号"
                }
              },
              "required": [
                "code",
                "name",
                "mobile",
                "business_unit",
                "tiktok_id",
                "red_booklet_id"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {}
          }
        }
      }
    },
    "/api/person": {
      "get": {
        "tags": [
          "内容创新"
        ],
        "summary": "根据手机号码查询人员信息",
        "description": "",
        "parameters": [
          {
            "name": "mobile",
            "in": "query",
            "required": true,
            "description": "手机号码",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {}
          }
        }
      }
    },
    "/api/login": {
      "post": {
        "tags": [
          "内容创新"
        ],
        "summary": "登录",
        "description": "",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "root",
            "in": "body",
            "schema": {
              "type": "object",
              "title": "empty object",
              "properties": {
                "mobile": {
                  "type": "string",
                  "description": "手机号码"
                },
                "code": {
                  "type": "string",
                  "description": "验证码"
                }
              },
              "required": [
                "mobile",
                "code"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {}
          }
        }
      }
    }
  }
}